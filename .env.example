# Application
APP_NAME="Employee Monitoring System"
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here  # Change this in production
ALGORITHM=HS256

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRE_DAYS=30
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
ACCOUNT_VERIFICATION_REQUIRED=true
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Security
SECURE_COOKIES=false  # Set to true in production with HTTPS
SESSION_COOKIE_NAME=session
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_SAMESITE=lax
CSRF_COOKIE_SECURE=false  # Set to true in production with HTTPS
CSRF_COOKIE_HTTPONLY=false  # JavaScript needs to access this

# API
API_V1_STR=/api/v1
PROJECT_NAME="Employee Monitoring System API"
SERVER_NAME=localhost
SERVER_HOST=http://localhost:8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./activity_tracker.db
TEST_DATABASE_URL=sqlite+aiosqlite:///./test_activity_tracker.db

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# File Uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "gif", "pdf"]

# Email
SMTP_TLS=true
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME="Employee Monitoring System"

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
RATE_LIMIT=100/minute

# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn-here
